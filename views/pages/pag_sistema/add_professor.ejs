<%- contentFor('body') %>
<div class="container my-5 border" style="background-color: rgba(80, 78, 78, 0.1);">
  <h1 class="text-center my-4"> Cadastro do Professor</h1>
  <form action="/add_professor" method="post" role="form" class="form" id="form-professor">
    <div class="row my-3">

      <div class="col-8 form-group">
        <label for="nome">Nome</label>
        <input type="text" name="nome" class="form-control" id="nome" placeholder="Nome Completo" required>
      </div>

      <div class="col form-group">
        <label for="nascimento">Data de Nascimento</label>
        <input type="date" class="form-control" name="nascimento" id="nascimento" placeholder="Data de nascimento" required>
      </div>

    </div>

    <div class="row my-3">

      <div class="col-6 form-group">
        <label for="cpf">CPF</label>
        <input type="text" name="cpf" class="form-control" id="cpf" placeholder="CPF" required>
      </div>

      <div class="col-6 form-group">
        <label for="rg">RG</label>
        <input type="text" class="form-control" name="rg" id="rg" placeholder="RG" required>
      </div>

    </div>

    <div class="col-12 form-group my-3">
      <label for="endereco">Endereço</label>
      <input type="text" class="form-control" name="endereco" id="endereco" placeholder="Cidade /Endereço /Nº" required>
    </div>

    <div class="row my-3">

      <div class="col-7 form-group">
        <label for="materia">Materia</label>
        <input type="text" class="form-control" name="materia" id="materia" placeholder="Materia" required>
      </div>

      <div class="col-5 form-group">
        <label for="salario">Salario</label>
        <input type="number" class="form-control" name="salario" id="salario" placeholder="R$:" required>
      </div>
        
    </div>
        
    <div class="form-group row mt-5">
      <div class="col-md-6">
        <a href="/sistema_FIT" class="btn btn-secondary btn-lg form-control">Cancelar</a>
      </div>
      <div class="col-md-6">
          <input type="submit" value="Cadastrar" class="btn btn-primary btn-lg form-control">
      </div>       
    </div>

  </form>
</div>